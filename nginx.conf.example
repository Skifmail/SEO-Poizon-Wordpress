# Пример конфигурации Nginx для nesivtoroi.tech
# Скопируйте этот файл в /etc/nginx/sites-available/nesivtoroi.tech

server {
    listen 80;
    server_name nesivtoroi.tech www.nesivtoroi.tech;

    # Логи
    access_log /var/log/nginx/nesivtoroi-access.log;
    error_log /var/log/nginx/nesivtoroi-error.log;

    # Максимальный размер загружаемых файлов (для изображений товаров)
    client_max_body_size 100M;

    # Буферизация для SSE (Server-Sent Events)
    proxy_buffering off;

    # Проксирование к Gunicorn
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        
        # Таймауты для долгих запросов (важно для загрузки товаров)
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        
        # Поддержка SSE (Server-Sent Events) для прогресса загрузки
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        chunked_transfer_encoding on;
    }

    # Статические файлы (если будут)
    location /static {
        alias /var/www/nesivtoroi.tech/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Запрет доступа к служебным файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

