server {
    2     listen 80;
    3     # !!! ЗАМЕНИТЕ ЭТО на ваш домен или IP-адрес сервера !!!
    4     server_name your_domain_or_ip_address;
    5 
    6     # Логи
    7     access_log /var/log/nginx/seo-poizon-access.log;
    8     error_log /var/log/nginx/seo-poizon-error.log;
    9 
   10     # Максимальный размер загружаемых файлов
   11     client_max_body_size 100M;
   12 
   13     # Проксирование к Gunicorn
   14     location / {
   15         proxy_pass http://127.0.0.1:8000; # Gunicorn работает на этом порту
   16         proxy_set_header Host $host;
   17         proxy_set_header X-Real-IP $remote_addr;
   18         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
   19         proxy_set_header X-Forwarded-Proto $scheme;
   20         proxy_redirect off;
   21         
   22         # Таймауты для долгих запросов
   23         proxy_connect_timeout 300s;
   24         proxy_send_timeout 300s;
   25         proxy_read_timeout 300s;
   26     }
   27 
   28     # Указываем Nginx, где лежат статические файлы (CSS, JS, картинки)
   29     location /static {
   30         # !!! ПУТЬ К ВАШЕЙ ПАПКЕ static !!!
   31         alias /home/skifmail/SEO-Poizon-Wordpress/static;
   32         expires 30d;
   33         add_header Cache-Control "public, immutable";
   34     }
   35 
   36     # Запрет доступа к служебным файлам
   37     location ~ /\. {
   38         deny all;
   39     }
   40 }